<h1>New Entry for <%= @place["name"] %></h1>

<form action="/entries" method="post">
  <p>
    <label for="title">Title of Entry</label>
    <input type="text" name="title">
  </p>

  <p>
    <label for="description">Description of Entry</label>
    <input type="text" name="description">
  </p>

  <p>
    <label for="occurred_on">Date of Entry</label>
    <input type="date" name="occurred_on">
  </p>

  <input type="hidden" name="place_id" value="<%= params["place_id"] %>">

  <button>Submit</button>
  <a href="/places/<%= @place["id"] %>">Cancel</a>
</form>